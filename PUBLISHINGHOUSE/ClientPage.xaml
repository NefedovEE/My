<Page x:Class="PUBLISHINGHOUSE.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PUBLISHINGHOUSE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage">

    <Grid>
        <DataGrid x:Name="ClientGrid" AutoGenerateColumns = "False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Писатель" Binding="{Binding FullName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}"></DataGridTextColumn>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Adress}"></DataGridTextColumn>
                <DataGridTextColumn Header="Название книги" Binding="{Binding BookTitle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Жанр книги" Binding="{Binding TitleGenre}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена книги" Binding="{Binding Price}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
