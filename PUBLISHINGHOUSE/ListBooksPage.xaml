<Page x:Class="PUBLISHINGHOUSE.ListBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PUBLISHINGHOUSE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListBooksPage">

    <Grid>
        <DataGrid x:Name="BookGrid" AutoGenerateColumns = "False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Название книги" Binding="{Binding BookTitle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Жанр" Binding="{Binding GenreTitle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во Страниц" Binding="{Binding PagesAmount}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена книги" Binding="{Binding Price}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
